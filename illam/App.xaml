<?xml version="1.0" encoding="utf-8"?>
<Application xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="illam.App">
	<Application.Resources>
		<!-- Application resource dictionary -->
        <ResourceDictionary>
            <Thickness x:Key="LeftPad">10</Thickness>
            
             <Style x:Key="Page" TargetType="StackLayout">
                <Setter Property="Margin" Value="{StaticResource LeftPad}"></Setter>
            </Style>

            <Style TargetType="ContentView">
                <Setter Property="Margin" Value="{StaticResource LeftPad}"></Setter>
            </Style>
        </ResourceDictionary>
	</Application.Resources>
</Application>
